<h1>New session</h1><div class="sign-in">

	<h1>Sign in</h1>
	
	<%= form_for(:session, :url => sessions_path) do |f| %> 
	
		<div class="field">
			<%= f.label :name %><br />
			<%= f.text_field :name %> 
		</div>
		<div class="field"> 
			<%= f.label :password %><br /> <%= f.password_field :password %>
		</div> 
		<br/>
		<div class="actions">
			<%= f.submit "Sign in" %> 
		</div>
	<% end %>
	
	<br/>
	<br/>

</div>
